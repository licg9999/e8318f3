{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "settings": {
    "jest": {
      "version": 28
    }
  },
  "rules": {
    "no-empty": "off",
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/no-non-null-assertion": "off"
  },
  "overrides": [
    {
      "files": ["scripts/**"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ]
}
